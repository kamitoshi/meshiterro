<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: "jpeg", class: "img-circle pull_left profile-img", fallback:"no_image.jpg" %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user), class:"pull-right" %></p>
  <% end %>
</div>
<%= render "post_images/list", post_images: @post_images %>
